{
    "name": "fred-land-fluss",
    "version": "1.0.0",
    "description": "P2P Stadt, Land, Fluss",
    "main": "index.js",
    "scripts": {
        "build": "webpack",
        "start": "webpack-dev-server",
        "lint": "eslint --max-warnings 0 src/**/*.ts src/**/*.tsx",
        "analyze": "yarn build && webpack -p --profile --json > dist/stats.json && webpack-bundle-analyzer dist/stats.json"
    },
    "author": "Frederick Gnodtke",
    "license": "MIT",
    "prettier": {
        "trailingComma": "all",
        "printWidth": 120,
        "tabWidth": 4
    },
    "eslintConfig": {
        "root": true,
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint",
            "react"
        ],
        "settings": {
            "react": {
                "version": "detect"
            }
        },
        "rules": {
            "@typescript-eslint/no-empty-interface": "off",
            "@typescript-eslint/no-non-null-assertion": "off",
            "@typescript-eslint/explicit-function-return-type": [
                "error",
                {
                    "allowExpressions": true
                }
            ],
            "@typescript-eslint/no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "^_",
                    "varsIgnorePattern": "^_"
                }
            ]
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier/@typescript-eslint",
            "plugin:react/recommended"
        ]
    },
    "dependencies": {
        "classnames": "^2.2.6",
        "date-fns": "^2.14.0",
        "mobx": "^5.15.4",
        "mobx-react": "^6.2.2",
        "nomine-lipsum": "^2.1.2",
        "p2p-networking": "^0.2.2",
        "p2p-networking-mobx": "^0.2.2",
        "p2p-networking-semantic-ui-react": "^0.2.2",
        "random-seed": "^0.3.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "semantic-ui-react": "^0.88.2",
        "tsdi": "^0.22.0"
    },
    "devDependencies": {
        "@types/classnames": "^2.2.10",
        "@types/date-fns": "^2.6.0",
        "@types/random-seed": "^0.3.3",
        "@types/react": "^16.9.35",
        "@types/react-dom": "^16.9.8",
        "@types/react-router": "^5.1.7",
        "@types/react-router-dom": "^5.1.5",
        "@types/uuid": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^3.0.2",
        "@typescript-eslint/parser": "^3.0.2",
        "css-loader": "^3.5.3",
        "eslint": "^7.1.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "eslint-plugin-react": "^7.20.0",
        "file-loader": "^6.0.0",
        "git-revision-webpack-plugin": "^3.0.6",
        "mini-css-extract-plugin": "^0.9.0",
        "node-sass": "^4.14.1",
        "prettier": "^2.0.5",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.2.1",
        "ts-loader": "^7.0.5",
        "typescript": "^3.9.3",
        "webpack": "^4.43.0",
        "webpack-bundle-analyzer": "^3.8.0",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.11.0"
    }
}
